{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/wangeditor"
  ]
}
